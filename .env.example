# Cloudflare R2 Configuration
# Documentation: https://developers.cloudflare.com/r2/api/s3/tokens/

# Votre Account ID Cloudflare (trouvable dans le dashboard Cloudflare)
R2_ACCOUNT_ID=your_cloudflare_account_id

# Access Key ID pour R2 (créer un API Token dans R2 > Manage R2 API Tokens)
R2_ACCESS_KEY_ID=your_r2_access_key_id

# Secret Access Key pour R2
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key

# Nom de votre bucket R2 (à créer dans Cloudflare R2)
R2_BUCKET_NAME=solalys-images

# URL publique de votre bucket (optionnel, à configurer après avoir lié un domaine custom)
# Si non configuré, utilisera l'URL R2 par défaut
R2_PUBLIC_URL=https://images.votredomaine.com

# Région (R2 utilise 'auto' par défaut)
R2_REGION=auto
